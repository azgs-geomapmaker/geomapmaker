<UserControl x:Class="Geomapmaker.AddEditContactsAndFaultsDockPaneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:ui="clr-namespace:Geomapmaker"
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{Binding Path=ui.AddEditContactsAndFaultsDockPaneViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.CommandBindings>
        <CommandBinding 
			Command="ApplicationCommands.Save"
			Executed="SaveCommandHandler"
			CanExecute="SaveCanExecuteHandler"
        />
        <CommandBinding 
			Command="ApplicationCommands.New"
			Executed="NewCommandHandler"
        />
    </UserControl.CommandBindings>

    <Grid>

        <Grid.Resources>
            <ui:RadioConfidenceConverter x:Key="RadioConfidenceConverter" />
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" LastChildFill="true" KeyboardNavigation.TabNavigation="Local" Height="30">
            <TextBlock Grid.Column="1" Text="{Binding Heading}" Style="{DynamicResource Esri_TextBlockDockPaneHeader}">
                <TextBlock.ToolTip>
                    <WrapPanel Orientation="Vertical" MaxWidth="300">
                        <TextBlock Text="{Binding Heading}" TextWrapping="Wrap"/>
                    </WrapPanel>
                </TextBlock.ToolTip>
            </TextBlock>
        </DockPanel>

        <ToggleButton Grid.Row="1" Grid.ColumnSpan="2" x:Name="PopulateFromExistingToggle" Content="Populate values from existing line" IsChecked="{Binding Prepopulate, Mode=TwoWay}" HorizontalAlignment="Center" Padding="5" Margin="5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Text="Type:" TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}" />
        <ComboBox
                Grid.Row="2" Grid.Column="1" 
	    		x:Name="ContactsAndFaultsComboBox" 
	    		IsTextSearchEnabled="True"
	    		TextSearch.TextPath="key"
	    		ItemsSource="{Binding Path=(ui:DataHelper.CFSymbols)}" 
	    		SelectedItem ="{Binding SelectedCFSymbol}" 
	    		Margin="5"
	    		IsReadOnly="False" 
	    		IsEditable="True"
	    		HorizontalAlignment="Stretch" 
            >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" ToolTip="{Binding description}">
                        <Image Source="{Binding preview}"   />
                        <TextBlock Text="{Binding key}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Text="Identity Confidence:" TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}" />
        <Grid Grid.Row="3" Grid.Column="1" >

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <RadioButton 
              Grid.Row="0" 
              Grid.Column="1" 
              GroupName="IdentityConfidence" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Center" 
              Content="Low"
              IsChecked="{Binding SelectedCF.IdentityConfidence, Converter={StaticResource RadioConfidenceConverter}, ConverterParameter='Low'}"
              Background="{DynamicResource Esri_BackgroundPressedBrush}" 
              Foreground="{DynamicResource Esri_TextInfoBrush}" 
              BorderBrush="{DynamicResource Esri_TextStyleSubduedBrush}"
              >
            </RadioButton>

            <RadioButton 
              Grid.Row="0" 
              Grid.Column="2" 
              GroupName="IdentityConfidence" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Center" 
              Content="Medium"
              IsChecked="{Binding SelectedCF.IdentityConfidence, Converter={StaticResource RadioConfidenceConverter}, ConverterParameter='Medium'}"
              Background="{DynamicResource Esri_BackgroundPressedBrush}" 
              Foreground="{DynamicResource Esri_TextInfoBrush}" 
              BorderBrush="{DynamicResource Esri_TextStyleSubduedBrush}"
              >
            </RadioButton>

            <RadioButton 
              Grid.Row="0" 
              Grid.Column="3"
              GroupName="IdentityConfidence" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Center" 
              Content="High"
              IsChecked="{Binding SelectedCF.IdentityConfidence, Converter={StaticResource RadioConfidenceConverter}, ConverterParameter='High'}"
              Background="{DynamicResource Esri_BackgroundPressedBrush}" 
              Foreground="{DynamicResource Esri_TextInfoBrush}" 
              BorderBrush="{DynamicResource Esri_TextStyleSubduedBrush}"
              >
            </RadioButton>
        </Grid>

        <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Text="Existence Confidence:" TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}" />
        <Grid Grid.Row="4" Grid.Column="1" >

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <RadioButton 
              Grid.Row="0" 
              Grid.Column="1" 
              GroupName="ExistenceConfidence" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Center" 
              Content="Low"
              IsChecked="{Binding SelectedCF.ExistenceConfidence, Converter={StaticResource RadioConfidenceConverter}, ConverterParameter='Low'}"
              Background="{DynamicResource Esri_BackgroundPressedBrush}" 
              Foreground="{DynamicResource Esri_TextInfoBrush}" 
              BorderBrush="{DynamicResource Esri_TextStyleSubduedBrush}"
              >
            </RadioButton>

            <RadioButton 
              Grid.Row="0" 
              Grid.Column="2" 
              GroupName="ExistenceConfidence" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Center" 
              Content="Medium"
              IsChecked="{Binding SelectedCF.ExistenceConfidence, Converter={StaticResource RadioConfidenceConverter}, ConverterParameter='Medium'}"
              Background="{DynamicResource Esri_BackgroundPressedBrush}" 
              Foreground="{DynamicResource Esri_TextInfoBrush}" 
              BorderBrush="{DynamicResource Esri_TextStyleSubduedBrush}"
              >
            </RadioButton>

            <RadioButton 
              Grid.Row="0" 
              Grid.Column="3"
              GroupName="ExistenceConfidence" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Center" 
              Content="High"
              IsChecked="{Binding SelectedCF.ExistenceConfidence, Converter={StaticResource RadioConfidenceConverter}, ConverterParameter='High'}"
              Background="{DynamicResource Esri_BackgroundPressedBrush}" 
              Foreground="{DynamicResource Esri_TextInfoBrush}" 
              BorderBrush="{DynamicResource Esri_TextStyleSubduedBrush}"
              >
            </RadioButton>
        </Grid>
                
        <TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Text="Location Confidence Meters:" TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}" />
        <ComboBox Grid.Row="5" Grid.Column="1" x:Name="LocationConfidenceComboBox" Margin="5" ItemsSource="{Binding Path=(ui:DataHelper.LocationConfidenceMeters)}" Text="{Binding SelectedCF.LocationConfidenceMeters}" IsReadOnly="False" IsEditable="True" HorizontalAlignment="Stretch" />


        <TextBlock Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Text="Concealed:" TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}" />
        <CheckBox Grid.Row="6" Grid.Column="1" Style="{DynamicResource Esri_CheckboxToggleSwitch}" HorizontalAlignment="Right" IsChecked="{Binding SelectedCF.IsConcealed}" ></CheckBox>

        <TextBlock Grid.Row="7" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Text="Notes:" TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}"/>
        <TextBox Grid.Row="7" Grid.Column="1" x:Name="NotesTextBlock" Margin="5" Text="{Binding SelectedCF.Notes}" HorizontalAlignment="Stretch" TextWrapping="Wrap" />

        <WrapPanel Grid.Row="8" Grid.Column="0" Margin="5" HorizontalAlignment="Left">
            <TextBlock Text="Data Source: " TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}"/>
            <TextBlock x:Name="DataSourceTextBox" FontStyle="Italic"  Text="{Binding SelectedCF.DataSource}" />
        </WrapPanel>

        <Button Grid.Row="9" Grid.Column="0" Padding="5" Margin="5" Command="ApplicationCommands.New" Style="{DynamicResource Esri_Button}">Reset</Button>
        <Button Grid.Row="9" Grid.Column="1" Padding="5" Margin="5" Command="ApplicationCommands.Save">Submit</Button>

        <TextBlock Grid.Row="10" Grid.Column="0" HorizontalAlignment="Left" Margin="5" Text="Line:" TextWrapping="Wrap" Style="{DynamicResource Esri_TextBlockRegular}"/>

        <ScrollViewer Grid.Row="11" Grid.ColumnSpan="2" >
            <TextBlock x:Name="ShapeTextBlock" Text="{Binding ShapeJson}" Margin="5" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top"/>
        </ScrollViewer>

    </Grid>
</UserControl>
